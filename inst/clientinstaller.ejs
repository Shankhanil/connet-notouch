    <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-2.1.3.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->

</head>
<body>
    <div class="container">
            <form class="form-horizontal" role="form" method="post">
                <h2>Registration</h2>
                <div class="form-group">
                    <label for="resturantName" class="col-sm-3 control-label">Resturant Name*</label>
                    <div class="col-sm-9">
                        <input type="text" id="resturantName" name="resturantName" placeholder="Resturant Name" class="form-control" autofocus required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="fssaiCode" class="col-sm-3 control-label">FSSAI code*</label>
                    <div class="col-sm-9">
                        <input type="text" id="fssaiCode" name="fssaiCode" placeholder="FSSAI Code" class="form-control" autofocus required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="fssaiCode" class="col-sm-3 control-label">FSSAI code*</label>
                    <div class="col-sm-9">
                        <input type="text" id="gst" name="gst" placeholder="GST number" class="form-control" autofocus required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="email" class="col-sm-3 control-label">Client Email* </label>
                    <div class="col-sm-9">
                        <input type="email" id="email" placeholder="Client Email" class="form-control" name= "email" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="phoneNumber" class="col-sm-3 control-label">Phone number* </label>
                    <div class="col-sm-9">
                        <input type="phoneNumber" id="phoneNumber" name="phoneNumber" placeholder="Phone number" class="form-control" required>
                        <!--<span class="help-block">Your phone number won't be disclosed anywhere </span>-->
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Menu choice</label>
                    <div class="col-sm-6">
                        <div class="row">
                            <div class="col-sm-4">
                                <label class="radio-inline">
                                    <input type="checkbox" id="basicRadio" value="Advanced"> Advanced
                                    <span class="help-block">Advance Menu is not available yet </span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div> <!-- /.form-group -->
                <div class="form-group">
                    <div class="col-sm-9 col-sm-offset-3">
                        <span class="help-block">*Required fields</span>
                        <span class="help-block">Password will be autogenerated and sent to Client's email </span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary btn-block" formaction="registerClient">Register Client</button>
            </form>
        </div>
</body>
</html>