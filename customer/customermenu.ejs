        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="invoice-title">
                        <h2><%= resturant %></h2><h3 class="pull-right">Order # <%= order.orderid %> </h3>
                    </div>
                    <hr>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><strong>Menu</strong></h3>
                        </div>
                        <div class="panel-body">
                        <form method="post">
                            <div class="table-responsive">
                                <table class="table table-condensed" style="table-layout: fixed; width: 100%">
                                    <thead>
                                        <tr>
                                            <td><strong>Item</strong></td>
                                            <td class="text-center"><strong>Price</strong></td>
                                            <td class="text-center"><strong>Quantity</strong></td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% var cat=''; %>
                                        <% for (var i = 0; i<menu.length; i++) { %>
                                            <% if (menu[i].category != cat) {%>
                                                <tr><td><strong> <%= menu[i].category %></strong> </td></tr>
                                                <% cat = menu[i].category; %>
                                            <%} %>
                                        <tr>
                                            <td style="word-break:break-all;" class="text-center"><%= menu[i].foodName%></td>
                                            <td style="word-break:break-all;" class="text-center"><%= menu[i].price %></td>
                                            <td style="word-break:break-all;" class="text-center"><%= menu[i].qty %></td>
                                            <td style="word-break:break-all;" class="text-center"><button formaction='additem/<%=i%>'>+</button></td>
                                            <% if (order.orderdetails[i]) { %>
                                                
                                            <td style="word-break:break-all;" class="text-center"> <%= order.orderdetails[i].qty %> </td>
                                            <% } else { %>
                                            <td style="word-break:break-all;" class="text-center"> <%= 0 %> </td>
                                            <% } %>

                                            <td style="word-break:break-all;" class="text-center"><button formaction='removeitem/<%=i%>'>-</button></td>
                                        </tr>
                                        <% } %>
                                        <tr>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td style="word-break:break-all;"><button class="pull-right" formaction="order"> OKAY </button></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>